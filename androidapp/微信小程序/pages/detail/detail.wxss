/* 按钮 */
.back{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 40rpx;
  top: 46rpx;
  z-index: 11;
}

.back-img{
  width: 70rpx;
  height: 70rpx;
}

/* 轮播图 */

swiper, .swiper-list {
  width: 750rpx;
  height: 750rpx;
  border-bottom: 1px solid #e9e9e9;
}

.slide-image {
  width: 750rpx;
  height: 750rpx;
  background-color: #f5f5f6;
}

/* 产品说明 */

.product {
  width: 700rpx;
  height: 106rpx;
  padding: 30rpx;
}

.product-title-text {
  font-size: 35rpx;
  font-style: normal;
  vertical-align: baseline;
  color: #333;
  font-weight: bold;
}

/* 分享按钮 */

.product-title-btn {
  width: 112rpx;
  height: 40rpx;
  background-color: #eee;
  border-radius: 20rpx;
  float: right;
  margin-left: 12rpx;
  position: relative;
}

.product-title-btn::after{
  border: none;
}

.product-title-btn-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  left: 1.6rpx;
}

.product-title-btn-title {
  font-size: 24rpx;
  width: 64rpx;
  line-height: 40rpx;
  color: #9b9b9b;
  position: absolute;
  top: 0;
  left: 40rpx;
  font-weight: bold;
}

.product-price {
  width: 750rpx;
  line-height: 46rpx;
  margin-top: 10rpx;
  color: #ff5f7c;
  font-weight: bold;
}

.product-price-symbol {
  font-size: 24rpx;
}

.product-price-money {
  font-size: 36rpx;
}

/* 分割物 */

.spiler {
  background-color: #f6f6f7;
}

/* 选择部分 */

.select {
  width: 750rpx;
  line-height: 82rpx;
  padding: 0 30rpx;
}

.select-item {
  width: 750rpx;
  line-height: 80rpx;
  display: flex;
}

.select-item-label {
  width: 90rpx;
  line-height: 80rpx;
  color: #9b9b9b;
  margin-right: 30rpx;
}

.select-item-desc {
  width: 500rpx;
  line-height: 80rpx;
  color: #151515;
  font-size: 24rpx;
}

.select-item-area {
  width: 80rpx;
  height: 24rpx;
}

.select-item-img {
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  padding: 28rpx 0;
}

/* 详情信息 */

.detail-box {
  width: 750rpx;
  margin-top: 20rpx;
}

.detail-box-nav-list {
  display: flex;
  width: 750rpx;
  height: 36rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 10rpx;
}

.detail-box-nav-list-item {
  width: 33.33%;
  line-height: 36rpx;
  border-right: 1rpx solid #e5e5e5;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.item-active {
  color: #80cb19;
}

.detail-box-nav-list-item:last-child {
  border-right: none;
}

/* 模块详细信息*/

.detail-box-container {
  width: 750rpx;
  
}

.detail-box-container-standard, .detail-box-container-page {
  width: 730rpx;
  margin: 0 10rpx;
  display: none;
}

/* 图片详情 */

.img, .detail-box-container-page-img {
  width: 730rpx;
  height: 1006rpx;
}



/* 参数规格 */

.detail-box-container-standard-contant {
  width: 728rpx;
  height: 74rpx;
  display: flex;
}

.detail-box-container-standard-contant-left {
  width: 196rpx;
  height: 48rpx;
  padding: 12rpx 26rpx;
  border: 2rpx solid #e5e5e5;
  font-weight: bold;
}

.detail-box-container-standard-contant-right {
  width: 428rpx;
  height: 48rpx;
  padding: 12rpx 26rpx;
  border: 2rpx solid #e5e5e5;
  border-left: none;
}

/* 购买咨询 */

.detail-box-container-qa {
  width: 650rpx;
  padding: 12rpx 50rpx;
  display: none;
  
}

.detail-box-container-qa-list {
  width: 650rpx;
}

.detail-box-container-qa-list-item {
  padding-top: 50rpx;
}

.detail-box-container-qa-list-item:first-child {
  padding-top: 0rpx;
}

.detail-box-container-qa-list-q {
  font-size: 30rpx;
  color: #666;
  padding-bottom: 20rpx;
}

.detail-box-container-qa-list-q::before {
  content: "问";
  background-color: #80cb19;
  color: #fff;
  font-size: 26rpx;
  border-radius: 6rpx;
  height: 24rpx;
  width: 24rpx;
}

.detail-box-container-qa-list-a {
  font-size: 30rpx;
  color: #999;
}

.detail-box-container-qa-list-a::before {
  content: "答";
  background-color: #fecd5f;
  color: #fff;
  font-size: 26rpx;
  border-radius: 6rpx;
  height: 24rpx;
  width: 24rpx;
}


/* 填充部分 */
.bottom-padding{
  margin-top: 26rpx;
  width: 730rpx;
  height: 126rpx;
}

/* 底部部分 */

.botton {
  width: 750rpx;
  height: 120rpx;
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
}

.box-like,
.box-cart{
  width: 120rpx;
  height: 120rpx;
  padding-right: 20rpx;
}

.botton-like-img,
.botton-cart-img{
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx 36rpx 6rpx 36rpx;
}

.botton-like-title,
.botton-cart-title{
  width: 120rpx;
  height: 32rpx;
  font-size: 22rpx;
  color: #333333;
  text-align: center;
}

.botton-btn{
  width: 510rpx;
  height: 80rpx;
  padding: 20rpx;
}

.botton-btn-title{
  background-color: #ff1a02;
  font-size: 32rpx;
  color: #ffffff;
  
  border-radius: 80rpx;
  padding: 20rpx;
  text-align: center;
  margin:  0 10rpx;
}


.current {
  display: block;
}