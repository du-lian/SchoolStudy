.header-title {
  font-size: 40rpx;
  line-height: 130rpx;
  color: #f5f1f2;
}

.category {
  display: flex;
  position: absolute;
  left: 0;
  right: 0;
  top: 130rpx;
  bottom: 0;
}

.category-left {
  width: 180rpx;
  background-color: #fff;
  flex-shrink: 0;
}

.active {
  background-color: #f2f2f2;
}

.category-left-item {
  line-height: 80rpx;
  border-bottom: 1rpx solid #ddd;
  text-align: center;
}

.category-right {
  flex: 1;
  background-color: #f2f2f2;
  padding: 20rpx 20rpx 2rpx 20rpx;
 
}

.category-right-swiper{
  height: 276rpx;
  padding-bottom: 20rpx;
}

.category-right-swiper-item{
  height: 276rpx;
}
.category-right-swiper-img{
  height: 276rpx;
  width: 526rpx;
  border-radius: 20rpx;
}

.category-right-list{
  width: 526rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  
  position: relative;
  border-radius: 20rpx;
}
.category-right-list::after{
  content: '';
  width: 100%;
  background-color: #fff;
  height: 2rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.category-right-list-item{
  width: 33.33%;
  height: 202rpx;
  padding: 10rpx;
  text-align: center;
  border-right: 1rpx solid #ddd;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
  
}


.category-right-list-item:nth-child(3n){
 border-right: 0;
}

.category-right-list-item-image{
  height: 140rpx;
  width: 140rpx;
}

.category-right-list-item-title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
