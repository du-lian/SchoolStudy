.fixsearch{
  width: 750rpx;
  height: 110rpx;
  border-bottom: 1rpx solid #ddd;
  background: #f7f7f7;
  display: flex;
  
  
}

.bar{
  width: 750rpx;
  height: 72rpx;
  padding: 16rpx 10rpx;
  background: #f7f7f7;
  position: fixed;
  top: 10rpx;
  left: 0rpx;

}

.icon-back{
  width: 100rpx;
  line-height: 76rpx;
  margin-right: 10rpx;

}

.icon-back-img{
  width: 40rpx;
  height: 40rpx;
  
}


.btn-search{
  width: 380rpx;
  height: 70rpx;
  padding: 0 26rpx;
  border: .1rem solid #e8e8e8;
  background: #fff;
  position: absolute;
  top: 20rpx;
  left: 60rpx;
}

/* 内容部分 */
.search-result{
  width: 750rpx;
  background: #f0f0f0;
}

.empty-prompt{
  width: 750rpx;
  height: 324rpx;
  padding-top: 32rpx;
  border-bottom: 1rpx solid #eaeaea;
  margin: 0  26rpx 26rpx 26rpx;
  font-size: 32rpx;
  text-align: center;
}

.prompt{
  width: 750rpx;
  height: 48rpx;
  padding-top: 226rpx;
  color: #bdbdbd;
  background: url(https://mall.360.cn/resource/img/m/search/anzai.png) top/auto 6em no-repeat;
}


.recommendation{
  width: auto;
  height: auto;
  padding:  0 20rpx;
  background: #f0f0f0;
}

/* 商品内容 */
.grid{
  width: 750rpx;
  
  background: #f0f0f0;
  display: flex;
  flex-wrap: wrap;
}

.grid-item{
  width: 50%;
  padding: 12rpx;
  border: 12rpx  solid #f0f0f0 ;
  background: #fff;
  box-sizing: border-box;
  text-align: center;
}

.grid-item-img{
  width: 250rpx;
  height: 250rpx;
  margin: 50rpx;
}

.grid-item-titel{
  width: 100%;
  color: #555;
    text-align: left;
    overflow: hidden;
    font-size: 32rpx;
    
}

.grid-item-price{
  width: 100%;
  line-height: 2;
    color: #f55;
    font-size: 32rpx;
}

